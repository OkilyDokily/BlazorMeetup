@page "/UserEvents/{id}"
@attribute [Authorize]
@inject MeetupService MeetupService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<Attendee> UserManager
@inject NavigationManager NavigationManager
@using BlazorMeetup.Data
@using Microsoft.AspNetCore.Identity
@using System.Diagnostics;

<h3>@DbUser.UserName Events</h3>

<table>
    <thead>
        <tr>
            <th>Description</th>
            <th>Date And Time</th>
            <th>Maximum Attendees</th>
            <th>Minimum Attendees</th>
            <th>Current Number of Attendees</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Event evt in events)
        {
                <tr @key="evt.Id" @onclick='()=>GoToPage(evt.Id)'>

                    <td>@evt.Description</td>
                    <td>@evt.DateAndTime</td>
                    <td>@evt.MaximumAttendees</td>
                    <td>@evt.MinimumAttendees</td>
                    <td>@evt.Attendees.Count</td>
                </tr>
        }
    </tbody>
</table>

@code {
    List<Event> events = new();
    [Parameter]
    public string id { get; set; }
    IdentityUser DbUser { get; set; }

    protected async override Task OnInitializedAsync()
    {

        DbUser = await UserManager.FindByIdAsync(id);
        events = MeetupService.GetYourEvents(id);
    }

    void GoToPage(string id)
    {
        NavigationManager.NavigateTo("/EventPage/" + DbUser.Id + "/" + id);
    }
}
